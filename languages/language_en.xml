    <name_program>Vocabulary_English</name_program>
    <!-- description buttons-->
    <label_button_window>
        <!-- button what stop session-->
      <button_pause>Pause</button_pause>
      <!-- button what start session-->
      <button_start>Start</button_start>
      <!-- button what check word-->
      <button_check>Check</button_check>
      <!-- button view definition word-->
      <button_definition>Verify</button_definition>
