  <!-- Help window, which explains the characters in the program-->
  <helper_window>
    <!-- Help window name -->
    <title>Help</title>
  </helper_window>
  <!-- setting window-->
  <setting_window>
    <!-- setting window name -->
    <title>Settings</title>
