      <general_settings>
        <name>Main settings</name>
         <!-- Two column. Description help-->
        <type_change>title</type_change>
      </general_settings>
    </title_column>
    <!-- name and type elements -->
    <elements_setting>
      <!-- language settings -->
    <language_interface>
        <!-- One column. Name help-->
        <name>Interface language</name>
         <!-- Two column. Description help-->
        <type_change>choice_area_language</type_change>
    </language_interface>
    </elements_setting>
    <!-- Name button -->
        <label_button_window>
      <!-- Exit button-->
      <button_exit>To main menu</button_exit>
      <!-- save setting-->
      <button_voice>Save settings</button_voice>
    </label_button_window>
  </setting_window>
  <!-- Bottom and top line of the program-->
  <bar>
    <!-- Help window prompt-->
    <label_help>F1 Help</label_help>
    <last_words>Words left:</last_words>
  </bar>
  <!-- Wrong translation information window-->
  <wrong_window>
    <!-- Wrong translation information window name-->
    <title_window>You made a mistake with the translation of the word</title_window>
    <!-- Text for Wrong translation information window  -->
    <label_table_wrong>
      <!-- Description wrong word -->
      <description_wrong_word>Your translation of the word</description_wrong_word>
      <!-- Stopwatch session-->
      <description_true_word_and_translate>Correct translation of the word </description_true_word_and_translate>
      <!-- Description true word and translate-->
      <description_part_of_a_word>Part of a word</description_part_of_a_word>
      <!-- Description transcription-->
      <description_transcription>Transcription</description_transcription>
      <!-- Description definition-->
      <description_definition>Definition</description_definition>
      <!-- Description theme word-->
      <description_theme_word>Тема</description_theme_word>
    </label_table_wrong>
