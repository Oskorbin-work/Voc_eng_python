    <label_button_window>
      <!-- Exit button-->
      <button_exit>To main menu</button_exit>
      <!-- button voice word-->
      <button_voice>Speak text</button_voice>
    </label_button_window>
  </wrong_window>
  <!-- Window of victory-->
  <win_window>
    <!-- Text when all words are gone-->
    <label_win_text>You passed all the words!</label_win_text>
  </win_window>
  <!-- Notifications-->
  <notifications>
        <!-- Exit Confirmation Window -->
    <exit_program>
      <!-- Title window-->
      <name>Exiting the program</name>
      <!-- question for confirm exit-->
      <question>Do you want to exit the program?</question>
      <!-- choice answer-->
      <choice>
        <!-- choice exit program-->
        <yes>Yes</yes>
        <!-- choice back program -->
        <no>No</no>
      </choice>
    </exit_program>
        <!-- Save Confirmation Window -->
    <save_button>
      <!-- Title window-->
      <name>Save setting</name>
      <!-- question for save setting-->
      <question>Do you want to save your settings?</question>
      <!-- choice answer-->
      <choice>
        <!-- choice exit program-->
        <yes>Yes</yes>
        <!-- choice back program -->
        <no>No</no>
      </choice>
      <!-- window for notification about the need to restart -->
      <notification_window>
        <!-- name window -->
        <title>Necessity to restart the program</title>
        <!-- text windows -->
        <text> For the changed parameters to take effect, you need to restart the program</text>
      </notification_window>
    </save_button>
    <!-- Definition output window-->
    <view_info_transcription>
      <!-- Definition output window name-->
      <title>Definition</title>
      <!-- Text for definition output window-->
      <name_transcription>Definition</name_transcription>
    </view_info_transcription>
    <!-- text for help window-->
    <help>
      <!-- Input word-->
      <enter>
        <!-- One column. Name help-->
        <name>Enter</name>
         <!-- Two column. Description help-->
        <description>Check word</description>
      </enter>
      <!-- Status program/session-->
      <status_program>
        <!-- One column. Name help-->
        <name>F2</name>
        <!-- Two column. Description help-->
        <description>Start/Pause</description>
       </status_program>
      <!-- Transcription word-->
      <transcription>
        <!-- One column. Name help-->
        <name>⌥</name>
        <!-- Two column. Description help-->
        <description>Transcription output</description>
      </transcription>
      <!-- Voice word-->
      <voice>
        <!-- One column. Name help-->
        <name>⌘</name>
        <!-- Two column. Description help-->
        <description>Word voice acting</description>
      </voice>
      <!-- Number of lives of a word in the current session -->
      <purple_heart>
        <!-- One column. Name help-->
        <name>:purple_heart:</name>
        <!-- Two column. Description help-->
        <description>Number of lives of the word in the current session. When life is 0, then the word is considered learned in the current session</description>
      </purple_heart>
      <!-- Number of sessions in a row where the word lost all lives in each session.-->
      <black_heart>
        <!-- One column. Name help-->
        <name>:black_heart:</name>
        <!-- Two column. Description help-->
        <description>The number of sessions in a row where the word lost all lives in each session. When three sessions in a row, the word becomes inactive</description>
      </black_heart>
      <!-- Number of all words in programs-->
      <books>
       <!-- One column. Name help-->
        <name>:books:</name>
        <!-- Two column. Description help-->
        <description>Number of all words in the program</description>
      </books>
      <!-- Number of words to learnn-->
      <bullseye>
       <!-- One column. Name help-->
        <name>:bullseye:</name>
        <!-- Two column. Description help-->
        <description>The number of words to learn (excluding temporarily active words)</description>
      </bullseye>
      <!-- Number of inactive words-->
      <military_medal>
        <!-- One column. Name help-->
        <name>:military_medal:</name>
        <!-- Two column. Description help-->
        <description>The number of inactive words is the words that have already been learned</description>
      </military_medal>
      <!-- Number of words that have already been repeated in the current session-->
      <check_mark_button>
        <!-- One column. Name help-->
        <name>:check_mark_button:</name>
