        <description>Number of words that have already been repeated in the current session</description>
      </check_mark_button>
      <!--Number of words that have one life-->
      <keycap_1>
        <!-- One column. Name help-->
        <name>:keycap_1:</name>
        <!-- Two column. Description help-->
        <description>Number of words that have one life</description>
      </keycap_1>
      <!-- Number of words that have two life-->
      <keycap_2>
        <!-- One column. Name help-->
        <name>:keycap_2:</name>
        <!-- Two column. Description help-->
        <description>Number of words that have two life</description>
      </keycap_2>
      <!-- Number of words that have three life-->
      <keycap_3>
        <!-- One column. Name help-->
        <name>:keycap_3:</name>
        <!-- Two column. Description help-->
        <description>Number of words that have three life</description>
      </keycap_3>
